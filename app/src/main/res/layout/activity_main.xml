<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chhun.buyfromus.MainActivity"
    android:background="#2BB711">


    <Button
        android:id="@+id/main_cat_btn1"
        android:layout_width="290dp"
        android:layout_height="81dp"
        android:onClick="goToCat1"
        android:text="SMART MEGA CONCERTS"
        tools:ignore="ContentDescription,HardcodedText"
        tools:layout_editor_absoluteY="102dp"
        tools:layout_editor_absoluteX="26dp"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/main_cat_btn2"
        android:layout_width="290dp"
        android:layout_height="81dp"

        android:text="MOVIES"
        tools:ignore="ContentDescription,HardcodedText,RtlHardcoded"

        android:layout_below="@+id/main_cat_btn1"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/main_cat_btn3"
        android:layout_width="290dp"
        android:layout_height="81dp"
        android:text="SOCIAL EVENT"
        tools:ignore="ContentDescription,HardcodedText,RtlHardcoded"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="273dp"
        android:layout_below="@+id/main_cat_btn4"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/main_cat_btn4"
        android:layout_width="290dp"
        android:layout_height="81dp"
        android:text="SMART MUSIC"
        tools:ignore="ContentDescription,HardcodedText,RtlHardcoded"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="273dp"
        android:layout_below="@+id/main_cat_btn2"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/smartmega"
        android:layout_marginTop="142dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/movie"
        android:layout_above="@+id/main_cat_btn4"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/smartmusic"
        android:layout_alignBottom="@+id/main_cat_btn4"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sport"
        android:layout_alignBottom="@+id/main_cat_btn3"
        android:layout_alignEnd="@+id/imageButton4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_marginBottom="43dp"
        android:layout_alignBottom="@+id/imageButton6"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_cat_btn1"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/background" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textSize="50dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp" />

</RelativeLayout>
